#main file 
# app.py (with Flask)

from flask import Flask, request, jsonify
from ast_engine import create_rule, combine_rules, evaluate_rule

app = Flask(__name__)

@app.route('/create_rule', methods=['POST'])
def create_rule_api():
    rule_string = request.json.get('rule')
    ast_node = create_rule(rule_string)
    return jsonify({"ast": str(ast_node)})

@app.route('/combine_rules', methods=['POST'])
def combine_rules_api():
    rules = request.json.get('rules')
    combined_ast = combine_rules(rules)
    return jsonify({"combined_ast": str(combined_ast)})

@app.route('/evaluate_rule', methods=['POST'])
def evaluate_rule_api():
    ast_json = request.json.get('ast')
    data = request.json.get('data')
    result = evaluate_rule(ast_json, data)
    return jsonify({"result": result})

if __name__ == '__main__':
    app.run(debug=True)
